@using FoodJournal.Dependences;
@using FoodJournal.BLL.Interfaces;

@{
    Layout = "~/Layouts/_Layout.cshtml";
    IProductBLL product = DependencyResolver.ProductBLL;
    string name = Request["Name"];
    double calorific;
    if (!double.TryParse(Request["Calorific"], out calorific)) { }
    string category = Request["Category"];

    if (IsPost)
    {
        var checkFile = Request.Files[0].FileName;
        byte[] imageBytes = { };

        if(checkFile != "")
        {
            var file = Request.Files[0];

            using (BinaryReader binaryReader = new BinaryReader(file.InputStream))
            {
                imageBytes = binaryReader.ReadBytes(file.ContentLength);
            }
        }

        product.Add(new FoodJournal.Entities.Product()
        {
            Name = name,
            Calorific = calorific,
            NetMass = 100,
            Category = (Products)Enum.Parse(typeof(Products), category, true),
            Image = imageBytes,
            ImageName = ""
        });

        Response.Redirect("~");
    }
}

<form class="crudContainer" action="~/Pages/AdminPages/AddProductToBase.cshtml" enctype="multipart/form-data" method="post">
    
    <div>
        <label class="crudHead">Name of product</label>
        <div>
            <input class="crudInput" type="text" name="Name" value=@name required>
        </div>
    </div>

    <div>
        <label class="crudHead">Calorific</label>
        <div>
            <input class="crudInput" type="text" name="Calorific" value=@calorific required>
        </div>
    </div>

    <div>
        <label class="crudHead">Category</label>
        <div>
            <select class="crudInput" name="Category" size="1">

                @foreach (var item in Enum.GetNames(typeof(Products)))
                {
                    <option value="@item">@item</option>
                }

            </select>
        </div>
    </div>

    <div>
        <label class="crudHead">Image</label>
        <div>
            <input class="crudInput" type="file" name="Image" multiple accept="image/png, image/jpeg">
        </div>
    </div>

    <div>
        <div>
            <button class="crudButton">Add</button>
        </div>
    </div>

</form>